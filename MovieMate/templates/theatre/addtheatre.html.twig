{% extends 'admin/index.html.twig' %}
{% block admin_content %}
<div class="register-page">
    <div class="registration-form">
        <h2>Add Theatre</h2>
        <form method="post" action="{{ path('add_theatre') }}" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Name</label>
                <input type="text" name="name" id="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input type="text" name="location" id="location" required class="form-control">
            </div>

            <div class="form-group">
                <label for="totalSeats">Total Seats</label>
                <input type="number" name="totalSeats" id="totalSeats" required class="form-control">
            </div>

            <div class="form-group">
                <label for="ticketPrice">Ticket Price</label>
                <input type="number" name="ticketPrice" id="ticketPrice" step="0.01" required class="form-control">
            </div>

        <button type="submit" class="btn-primary">Add Theatre</button>
        </form>
    
{% endblock %}