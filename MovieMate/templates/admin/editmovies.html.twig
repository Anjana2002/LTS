{% extends 'admin/index.html.twig' %}

{% block admin_content %}
	<h2>All Movies</h2>
	<div class="movies-grid">
		{% for movie in movies %}
			<div class="movie-card">
				<div class="poster">
					{% if movie.poster %}
						<img src="{{ asset(movie.poster) }}" alt="{{ movie.title }}">
					{% else %}
						<div class="no-poster">No Poster</div>
					{% endif %}
				</div>
				<h3>{{ movie.title }}</h3>
				<p>
					<strong>Genre:</strong>
					{{ movie.genre }}</p>
				<p>
					<strong>Director:</strong>
					{{ movie.director }}</p>
				<p>
					<strong>Release:</strong>
					{{ movie.releaseDate|date('Y-m-d') }}</p>
				<a href="{{ path('edit_form', {'id': movie.id}) }}" class="btn">Edit</a>

			</div>
		{% else %}
			<p>No movies added yet.</p>
		{% endfor %}
	</div>
{% endblock %}
